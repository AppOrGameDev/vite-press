{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme/*": [
        "docs/.vitepress/theme/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "global.d.ts",
    "docs/.vitepress/**/*"
  ]
}
